@model OnlineShop.Models.Product

<div class="col-sm-3 single-product">
    <img src="@($"data:image/gif;base64,{Convert.ToBase64String(Model.Picture)}")" /> 
    <p>@Model.Name</p>
    <p>Price: $@Model.Price</p>

     @Html.ActionLink("Add To Cart", "AddToCart", "Cart", new { id = @Model.Id }, new { @class = "add-to-cart-link" })
</div>